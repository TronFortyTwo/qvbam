{
	"template": "cmake",
	"build_args": "-DSDL_PATH=${SRC_DIR}/libs/sdl/SDL-1.2.15/",
	"dependencies_target": [
		"libpulse-dev",
		"libasound-dev",
		"qtdeclarative5-dev",
		"zlib1g-dev",
		"libpng-dev",
		"libgl-dev"
	],
	"libraries": {
		"sdl": {
			"env_vars": {
				"CXXFLAGS": "-fpermissive -0fast -std=gnu++11"
			},
			"template": "custom",
			"prebuild": "cd ${SRC_DIR} && if [ ! -d SDL-1.2.15 ]; then tar xf SDL-1.2.15.tar.gz && cd SDL-1.2.15 && patch -p 1 -f < ../SDL1.patch; fi",
			"build": "cd ${SRC_DIR}/SDL-1.2.15 && ./autogen.sh && ./configure --enable-input-tslib=off --build=x86_64-linux-gnu --host=${ARCH_TRIPLET} && make -j2"
		}
	},
	"scripts": {
		"cleansdl": "rm -rf ${SRC_DIR}/libs/sdl/SDL-1.2.15"
	}
}
